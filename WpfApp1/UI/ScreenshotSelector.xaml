<Window x:Class="WpfApp1.UI.ScreenshotSelector"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#55000000"
        WindowState="Maximized"
        Topmost="True"
        ShowInTaskbar="False">
    <Canvas Name="OverlayCanvas"
            MouseLeftButtonDown="OverlayCanvas_MouseLeftButtonDown"
            MouseMove="OverlayCanvas_MouseMove"
            MouseLeftButtonUp="OverlayCanvas_MouseLeftButtonUp"/>
</Window>