<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annotation Toolbar"
        Width="400" Height="50"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border Background="#222" CornerRadius="8" Padding="5" BorderBrush="Gray" BorderThickness="1">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

            <!-- Your buttons -->
            <Button x:Name="DragIcon"
        Content="⇄"
        ToolTip="Drag Me"
        Width="30"
        Height="30"
        Margin="5"/>
            <Button Content="🖉" ToolTip="Line" Click="LineButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="▭" ToolTip="Rectangle" Click="RectButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="✏️" ToolTip="Freehand" Click="FreehandButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="T" ToolTip="Text" Click="TextButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="📷" ToolTip="Screenshot" Click="ScreenshotButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="🔍" ToolTip="Magnifier" Click="MagnifierButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="🗑" ToolTip="Clear" Click="ClearButton_Click" Width="30" Height="30" Margin="5"/>
            <Button Content="🖼" ToolTip="Key Validate" Click="Button_Click" Height="30" Width="30" Margin="5"/>
            <Button Content="💾" ToolTip="Save" Click="SaveButton_Click" Width="30" Height="30" Margin="5"/>
        </StackPanel>
    </Border>
</Window>